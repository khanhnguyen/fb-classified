<%= form_for @classified do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :region %>
    <%= f.collection_select(:id, Region.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :category %>
    <%= f.collection_select(:id, Category.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :publish %>
    <%= f.check_box :publish %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
