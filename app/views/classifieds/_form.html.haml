= form_for @classified do |f|
  -if @classified.errors.any?
    #error_explanation
      %h2= "#{pluralize(@classified.errors.count, "error")} prohibited this classified from being saved:"
      %ul
        - @classified.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :publish
    = f.check_box :publish
  .actions
    = f.submit 'Save'
